#:import CustomMap controller.custommap.CustomMap
#:import AboutDonationPage controller.aboutdonationpage.AboutDonationPage
#:import HomePage controller.homepage.HomePage
#:import QuizPage controller.quizpage.QuizPage

<MainScreen>
    id: main_screen_viewmodel
    md_bg_color: app.theme_cls.bg_light

    FloatLayout:
        MDToolbar:
            id: toolbar
	        size_hint: 1, .08
	        pos_hint: {'center_x': .5, 'center_y': .96}
	        title: 'Doando Vida'
            elevation: 1
            left_action_items: [["menu", lambda x: main_screen_viewmodel.open_menu(x)]]

        MDGridLayout:
            cols: 2
            size_hint: .2, .1
            pos_hint: {'center_x': .85, 'center_y': .85}

            MDLabel:
                id: quiz_text
                text: 'Quiz points: '

            MDLabel:
                id: quiz_points
                text: root.quiz_points

        MDBottomNavigation:
            panel_color: .2, .2, .2, 1
            size_hint: 1, .92
            text_color_normal: .8, .8, .8, .8

            MDBottomNavigationItem:
                name: 'mainpage'
                text: 'Home'
                icon: 'card-account-details-star'

                HomePage:

            MDBottomNavigationItem:
                id: mapbox
                name: 'map'
                text: 'Mapa'
                icon: 'map'

                CustomMap:


            MDBottomNavigationItem:
                name: 'aboutpage'
                text: 'Saiba mais...'
                icon: 'book-information-variant'

                AboutDonationPage:

            MDBottomNavigationItem:
                name: 'gamepage'
                text: 'Quiz'
                icon: 'gamepad-square'

                QuizPage: