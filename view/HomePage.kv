<HomePage>
    id: homepage_viewmodel

    Image:
        size_hint: 1, 1
        source: 'assets/home_image.png'
        allow_stretch: True
        keep_ratio: False

    FloatLayout:
        custom_color: True

        MDGridLayout:
            cols: 4
            size_hint: .8, .3
            pos_hint: {'center_x': .5, 'center_y': .8}
            radius: 22
            md_bg_color: app.theme_cls.accent_color

            MDLabel:
                text: 'Nome: '
                size_hint: None, 1
                width: 75
                halign: 'center'
                theme_text_color: 'Custom'
                text_color: 0,128,128,1

            MDLabel:
                text: root.user_name
                size_hint: None, 1
                width: 325
                halign: 'left'
                theme_text_color: 'Custom'
                text_color: 0,128,128,1

            MDLabel:
                text: 'Idade: '
                size_hint: None, 1
                width: 75
                halign: 'center'
                theme_text_color: 'Custom'
                text_color: 0,128,128,1

            MDLabel:
                text: root.user_age
                size_hint: 1, 1
                width: 125
                halign: 'left'
                theme_text_color: 'Custom'
                text_color: 0,128,128,1

            MDLabel:
                text: 'E-mail: '
                size_hint: None, 1
                width: 75
                halign: 'center'
                theme_text_color: 'Custom'
                text_color: 0,128,128,1

            MDLabel:
                text: root.user_mail
                size_hint: None, 1
                width: 325
                halign: 'left'
                theme_text_color: 'Custom'
                text_color: 0,128,128,1

            MDLabel:
                text: 'Sexo: '
                size_hint: None, 1
                width: 75
                halign: 'center'
                theme_text_color: 'Custom'
                text_color: 0,128,128,1

            MDLabel:
                text: root.user_gender
                size_hint: 1, 1
                width: 100
                halign: 'left'
                theme_text_color: 'Custom'
                text_color: 0,128,128,1

        Image:
            size_hint: 1, .4
            pos_hint: {'center_x': .5, 'center_y': .45}
            source: 'assets/little_friend_donator.png'

        MDGridLayout:
            cols: 2
            size_hint: 1, .16
            pos_hint: {'center_x': .5, 'center_y': .15}
            MDLabel:
                text: 'Última doação'
                size_hint: 1, .3
                font_size: 18
                halign: 'center'
                theme_text_color: 'Custom'
                text_color: 0,0,0,1
                pos_hint: {'center_x': .3, 'center_y': .16}

            MDLabel:
                text: 'Próxima data'
                size_hint: 1, .3
                font_size: 18
                halign: 'center'
                theme_text_color: 'Custom'
                text_color: 0,0,0,1
                pos_hint: {'center_x': .6, 'center_y': .16}

            MDLabel:
                text: root.date
                size_hint: 1, .3
                font_size: 28
                halign: 'center'
                theme_text_color: 'Custom'
                text_color: 0,0,0,1
                pos_hint: {'center_x': .3, 'center_y': .08}

            MDLabel:
                text: root.next_donation
                size_hint: 1, .3
                font_size: 28
                halign: 'center'
                theme_text_color: 'Custom'
                text_color: 0,0,0,1
                pos_hint: {'center_x': .6, 'center_y': .08}