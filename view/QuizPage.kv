<QuizPage>
    id: quiz_viewmodel

    FloatLayout:
        MDLabel:
            text: root.question
            font_size: root.question_size
            pos_hint: {'center_x': .6, 'center_y': .85}

        GridLayout:
            cols: 2
            size_hint: .7, .5
            pos_hint: {'center_x': .5, 'center_y': .5}

            CheckBox:
                group: 'question'

            MDLabel:
                text: root.answer1
                font_size: root.answers_size

            CheckBox:
                group: 'question'

            MDLabel:
                text: root.answer2
                font_size: root.answers_size

            CheckBox:
                group: 'question'

            MDLabel:
                text: root.answer3
                font_size: root.answers_size

        MDRaisedButton:
            text: 'Responder'
            size_hint: .8, .1
            pos_hint: {'center_x': .5, 'center_y': .1}
            font_size: 24
            on_release: root.show_answer