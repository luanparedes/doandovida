<LoginScreen>
    label_hyperlink: lbl_hl
    btn_click: btn_enter
    id: sc

    BoxLayout:
        orientation: 'vertical'
        spacing: 30
        canvas.before:
            Color:
                rgb: (250/255,128/255,114/255)

            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            Image:
                source: 'Assets\\logo.png'

        AnchorLayout:
            GridLayout:
                rows: 4
				cols: 1
				size_hint_max_x: 300
				spacing: 15
				anchor_y: 'center'
				anchor_x: 'center'

                BoxLayout:
                    orientation: 'vertical'
                    spacing: 30
                    size_hint: 1, 1
                    size_hint_max_x: 300

                    MDTextFieldRound:
                        size_hint_max_x:
                        hint_text: "Login"
                        helper_text: "Digite aqui o seu e-mail de acesso"
                        helper_text_mode: "persistent"
                        icon_left: 'account'
                        normal_color: (255/255,255/255,255/255)
                        color_active: (200/255,200/255,200/255)

                    MDTextFieldRound:
                        size_hint_max_x: 250
                        hint_text: "Senha"
                        helper_text: "Digite aqui a sua senha de acesso"
                        helper_text_mode: "persistent"
                        password: True
                        icon_left: 'key-variant'
                        normal_color: (255/255,255/255,255/255,255/255)
                        color_active: (0.9,0.9,0.9,0)

                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y: 'center'
                    size_hint_max_y: 30
                    spacing: 15
                    Button:
                        id: btn_enter
                        text: 'Enter'
                        size_hint: 0.3, 0.7
                        on_press: sc.to_mainpage_screen()

                BoxLayout:
                    Label:
                        id: lbl_hl
                        text: 'New user? [b][ref=Click here]Click here![/ref][/b]'
                        markup: True
                        on_ref_press: sc.to_newuser_screen()