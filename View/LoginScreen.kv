<LoginScreen>
    id: viewmodel
    orientation: 'vertical'
    spacing: 30
    canvas.before:
        Color:
            rgb: (200/255,128/255,114/255)
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        size_hint: 1, .4
        pos_hint: {'center_x': .5, 'center_y':0.80}
        Image:
            source: 'Assets/logo.png'
    FloatLayout:
        MDTextFieldRound:
            hint_text: "Login"
            icon_left: 'account'
            icon_color: app.theme_cls.accent_color
            normal_color: (255/255,255/255,255/255)
            color_active: (0/255,0/255,0/255)
            size_hint: .8,.05
            pos_hint: {'center_x':.5, 'center_y':.5}
        MDTextFieldRound:
            hint_text: "Senha"
            password: True
            icon_left: 'key-variant'
            normal_color: (255/255,255/255,255/255,255/255)
            color_active: (0/255,0/255,0/255)
            size_hint: .8,.05
            pos_hint: {'center_x':.5, 'center_y':.4}
        MDIconButton:
            id: btn_enter
            icon: 'Assets/login_button.png'
            pos_hint: {'center_x':.5, 'center_y':.3}
            on_press: viewmodel.to_mainpage_screen()
        Label:
            id: lbl_hl
            text: 'Novo usu√°rio? [b][ref=Cadastre-se]Cadastre-se![/ref][/b]'
            markup: True
            size_hint: .8,.05
            pos_hint: {'center_x':.5, 'center_y':.2}
            on_ref_press: viewmodel.to_newuser_screen()