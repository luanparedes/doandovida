<AboutCard>
    id: about_card

    orientation: "vertical"
    radius: 18
    size_hint: root.card_size
    pos_hint: {'center_x': .5, 'center_y': .5}
    padding: 20

    FloatLayout:
        size_hint: 1, 1
        MDLabel:
            text: 'Projeto Doando Vida'
            halign: 'center'
            font_size: 32
            pos_hint: {'center_x': .5, 'center_y': .98}

        MDLabel:
            text: 'Projeto de conclusão de curso de Ciência da Computação'
            halign: 'center'
            font_size: 20
            pos_hint: {'center_x': .5, 'center_y': .85}

        MDLabel:
            text: 'Universidade Paulista - UNIP\nCampus Campinas - SWIFT'
            halign: 'center'
            font_size: 20
            pos_hint: {'center_x': .5, 'center_y': .70}

        MDLabel:
            text: 'Desenvolvedores da aplicação:'
            halign: 'center'
            font_size: 20
            pos_hint: {'center_x': .5, 'center_y': .35}

        MDLabel:
            text: 'Luan Lucas de Simas Paredes\nJosé Carlos Amici Junior\nMatheus da Silva Gomes\nLeonardo Gambarato'
            halign: 'center'
            font_size: 16
            pos_hint: {'center_x': .5, 'center_y': .20}

        MDLabel:
            text: 'Versão 1.0.0'
            halign: 'left'
            font_size: 20
            pos_hint: {'center_x': .50, 'center_y': .03}

        MDFillRoundFlatButton:
            id: text_button
            text: 'Fechar'
            font_size: root.text_button_size
            radius: 18
            size_hint: root.button_size
            pos_hint: {'center_x': .90, 'center_y': .04}
            on_release: root.isOpen_check()
