<MainScreen>
    id: main_screen_viewmodel
    FloatLayout:
        MDToolbar:
            id: toolbar
	        size_hint: 1, .08
	        pos_hint: {'center_x': .5, 'center_y': .96}
	        title: 'Doando Vida'
            elevation: 1
            md_bg_color: app.theme_cls.accent_color
            left_action_items: [["menu", lambda x: main_screen_viewmodel.open_menu(x)]]

    FloatLayout:
        id: mapbox
        size_hint: 1, .92

<CustomMap>
    id: map_viewmodel
    FloatLayout:
        TooltipMDIconButton:
            id: size_map
            icon: 'fullscreen'
            user_font_size: "32sp"
            theme_text_color: "Custom"
            text_color: app.theme_cls.accent_color
            tooltip_text: 'Maximizar'
            tooltip_bg_color: app.theme_cls.accent_color
            pos_hint: {"center_x":.2,"center_y":.2}
            shift_y: 85
            on_press: map_viewmodel.maximize_map()

<TooltipMDIconButton@MDIconButton+MDTooltip>