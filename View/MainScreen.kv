<MainScreen>
    id: viewmodel
    FloatLayout:
        MDToolbar:
	        size_hint: 1, .08
	        pos_hint: {'center_x': .5, 'center_y': .96}
	        title: 'Doando Vida'
            elevation: 20
            md_bg_color: app.theme_cls.accent_color
            left_action_items: [["menu", lambda x: viewmodel.open_menu()]]
	BoxLayout:
	    id: mapbox
	    size_hint: 1, .92

<CustomMap>
    id: viewmodel
    MDIconButton:
        id: size_map
        icon: 'Assets/close.png'
        pos_hint: {'center_x':.1, 'center_y':.1}
        on_press: viewmodel.maximize_map()