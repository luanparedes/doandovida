<CreateUser>
    id: viewmodel

    MDFloatLayout:
        md_bg_color: app.theme_cls.bg_darkest
        MDToolbar:
	        size_hint: 1, .08
	        pos_hint: {'center_x': .5, 'center_y': .96}
	        title: 'Doando Vida'
            elevation: 1
            md_bg_color: app.theme_cls.accent_color
            left_action_items: [["arrow-left", lambda x: viewmodel.to_login_screen()]]
        MDLabel:
            text: 'CADASTRO DE USUÁRIO'
            font_size: 36
            size_hint_x: .5
            halign: 'center'
            pos_hint: {'center_x':.5, 'center_y':.85}
        MDRaisedButton:
            text: 'CADASTRAR'
            font_size: 16
            size_hint: .70,.12
            size_hint_max_y: 50
            md_bg_color: app.theme_cls.accent_color
            pos_hint: {'center_x':.5, 'center_y':.08}
            on_release: viewmodel.create_user_action()
        ScrollView:
            pos_hint: {'center_x':.5, 'center_y':.45}
            size_hint_x: .90
            size_hint_y: .62
            padding_x:[20,0]
            GridLayout:
                rows: 18
                size_hint: 1, None
                spacing: 17
                halign: 'center'
                height: self.minimum_height
                width: self.minimum_width
                MDTextField:
                    id: email
                    size_hint: 1, None
                    hint_text: "E-mail"
                    helper_text: "Digite aqui o seu endereço de e-mail"
                    helper_text_mode: "persistent"
                MDTextField:
                    id: password
                    size_hint: 1, None
                    hint_text: "Senha"
                    helper_text: "Digite aqui a sua senha"
                    helper_text_mode: "persistent"
                    on_focus: viewmodel.on_verify_email()
                MDTextField:
                    id: confirm
                    size_hint: 1, None
                    hint_text: "Confirme sua senha"
                    helper_text: "Digite novamente a sua senha"
                    helper_text_mode: "persistent"
                MDTextField:
                    id: name
                    size_hint: 1, None
                    hint_text: "Nome"
                    helper_text: "Digite aqui o seu nome completo"
                    helper_text_mode: "persistent"
                MDTextField:
                    id: cpf
                    size_hint: 1, None
                    hint_text: "CPF"
                    helper_text: "Digite aqui o seu CPF"
                    helper_text_mode: "persistent"
                MDTextField:
                    id: rg
                    size_hint: 1, None
                    hint_text: "RG"
                    helper_text: "Digite aqui o seu RG"
                    helper_text_mode: "persistent"
                MDTextField:
                    id: cep
                    size_hint: 1, None
                    hint_text: "Endereço: CEP"
                    helper_text: "Digite aqui o CEP de sua residência"
                    helper_text_mode: "persistent"
                MDTextField:
                    id: neighborhood
                    size_hint: 1, None
                    hint_text: "Endereço: Bairro"
                    helper_text: "Digite aqui o bairro onde mora"
                    helper_text_mode: "persistent"
                MDTextField:
                    id: street
                    size_hint: 1, None
                    hint_text: "Endereço: Rua"
                    helper_text: "Digite aqui a rua onde mora"
                    helper_text_mode: "persistent"
                MDTextField:
                    id: number
                    size_hint: 1, None
                    hint_text: "Endereço: Número"
                    helper_text: "Digite aqui o número de sua residência"
                    helper_text_mode: "persistent"
                MDTextField:
                    id: complement
                    size_hint: 1, None
                    hint_text: "Endereço: Complemento"
                    helper_text: "Complemento: ex(ao lado da igreja)"
                    helper_text_mode: "persistent"
                MDTextField:
                    id: city
                    size_hint: 1, None
                    hint_text: "Endereço: Cidade"
                    helper_text: "Digite aqui a cidade onde mora"
                    helper_text_mode: "persistent"
                MDTextField:
                    id: state
                    size_hint: 1, None
                    hint_text: "Endereço: Estado"
                    helper_text: "Digite aqui a sigla do estado onde mora"
                    helper_text_mode: "persistent"
                MDTextField:
                    id: tel
                    size_hint: 1, None
                    hint_text: "Telefone"
                    helper_text: "Digite aqui o número de telefone fixo"
                    helper_text_mode: "persistent"
                MDTextField:
                    id: cel
                    size_hint: 1, None
                    hint_text: "Celular"
                    helper_text: "Digite aqui o número de celular"
                    helper_text_mode: "persistent"
                MDTextField:
                    id: myheight
                    size_hint: 1, None
                    hint_text: "Altura"
                    helper_text: "Digite aqui a sua altura"
                    helper_text_mode: "persistent"
                MDTextField:
                    id: myweight
                    size_hint: 1, None
                    hint_text: "Peso"
                    helper_text: "Digite aqui o seu peso mais recente"
                    helper_text_mode: "persistent"
                MDTextField:
                    id: blood
                    size_hint: 1, None
                    hint_text: "Tipo sanguineo"
                    helper_text: "Digite aqui o seu tipo sanguíneo"
                    helper_text_mode: "persistent"